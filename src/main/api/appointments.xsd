<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:element name="appointments">
  <xs:complexType>  	
    <xs:sequence>
      <xs:element name="appointment" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="dateOfAppointment" type="xs:string"/>
            <xs:element name="timeOfAppontment" type="xs:string"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
</xs:element>

</xs:schema>